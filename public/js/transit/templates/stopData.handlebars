<div class="control-group">
<label>Stop Tools</label>
  <div class="btn-group">
    <button class="btn btn-small newStop"><i class="icon-plus"></i> New</button>
    <button class="btn btn-small removeStop" disabled="disabled"><i class="icon-remove"></i> Remove</button>
    <!--
    <button class="btn btn-small editStop"><i class="icon-move"></i> Edit</button>
      <button class="btn btn-small toggleMultipleSelect" disabled="disabled">Multiple</button>
    -->
  </div>
</div>

<div class="well well-small">
  <form class="form-horizontal">
    <fieldset>
      <legend>Stop id: {{stop.properties.stop_id}}</legend>
      <!--
      <p><strong>Ordinal: </strong>{{stop.properties.stop_seq}}</p>
      <label class="checkbox">
        <input type="checkbox" {{#if stop.properties.is_timepoint}}checked{{/if}}> 
        control tiempo
      </label>
      -->
      {{#if editMode}}
        <label>Calle</label>
        <input type="text" class="edit-stop-calle" value="{{stop.properties.stop_calle}}">
        <label>NÃºmero</label>
        <input type="text" class="edit-stop-numero" value="{{stop.properties.stop_numero}}">
        <label>Esquina</label>
        <input type="text" class="edit-stop-esquina" value="{{stop.properties.stop_esquina}}">
        <label>Entre</label>
        <input type="text" class="edit-stop-entre" value="{{stop.properties.stop_entre}}">
      {{else}}
        <dl>
          <dt>Calle</dt>
          <dd>{{stop.properties.stop_calle}}</dd>
          <dt>Numero</dt>
          <dd>{{stop.properties.stop_numero}}</dd>
          <dt>Esquina</dt>
          <dd>{{stop.properties.stop_esquina}}</dd>
          <dt>Entre</dt>
          <dd>{{stop.properties.stop_entre}}</dd>
          <dt>Lineas</dt>
          <dd>
            <p>{{#each stop.properties.stop_lineas}}{{this}}, {{/each}}</p>
          </dd>
        </dl>
      {{/if}}
    </fieldset>
    
    <div class="btn-group">
      <button class="btn {{#if editMode}}btn-primary {{/if}}editStop"><i class="icon-pencil"></i> Edit</button>
      {{#if stop.changed}}
        <button class="btn btn-primary saveStop"><i class="icon-ok"></i> Save</button>
      {{/if}}
      <button class="btn cancelEditStop">Cancel</button>
    </div>
  </form>
</div>
