<label>Stop Tools</label>
<div class="control-group">
  <div class="btn-group">
    <button class="btn btn-small drawStops"><i class="icon-plus"></i> Create</button>
    <button class="btn btn-small editStops"><i class="icon-move"></i> Move</button>
    <button class="btn btn-small toggleMultipleSelect" disabled="disabled">Multiple</button>
    <button class="btn btn-small saveStops"><i class="icon-ok"></i> Save</button>
  </div>
</div>

<label>Trip Tools</label>
<div class="control-group">
    <div class="btn-group">
      <button class="btn btn-small sortStops">Sort</button>
      <button class="btn btn-small offsetStops">Align</button>
    </div>
</div>

<div class="control-group">
  <div class="btn-toolbar">
    <div class="btn-group">
      <button class="btn btn-small removeStop"><i class="icon-trash"></i> Remove</button>
      <button class="btn btn-small appendStop"><i class="icon-chevron-down"></i> Append</button>
      <button class="btn btn-small saveStops"><i class="icon-ok"></i> Save</button>
      <!-- 
      <button class="btn btn-small toggleTimepoint"><i class="icon-time"></i></button> -->
    </div>
    <div class="btn-group">
      <button class="btn btn-small prevStop"><i class="icon-step-backward"></i></button>
      <button class="btn btn-small nextStop"><i class="icon-step-forward"></i></button>
    </div>
  </div>
</div>