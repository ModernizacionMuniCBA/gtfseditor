
<div class="row voffset1">
  <div class="col-md-7">
    <table class="table table-hover table-condensed table-editable">
      <thead>
        <tr>
          <th class="col-sm-5">Service Id</th>
          <th class="col-sm-6">Time</th>
          <th class="col-sm-1"></th>
        </tr>
      </thead>
      <tbody>
        {{#each models}}
        <tr data-index="{{@index}}">
          <td><input class="form-control" data-attr="service_id" type="text" value="{{service_id}}"/></td>
          {{!-- <td>
            <select class="form-control" data-attr="service_id">
              {{#each ../service_ids}}
              <option value="{{this}}">{{this}}</option>
              {{/each}}
            </select>
          </td> --}}
          <td><input class="form-control" data-attr="start_time" type="text" value="{{start_time}}"/></td>
          <td><button class="btn btn-default btn-rm"><span class="glyphicon glyphicon-remove"></span></button></td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
  <div class="col-md-5">
    <button class="btn btn-default add-btn"><span class="glyphicon glyphicon-plus"></span> Add</button>
    <button class="btn btn-default save-btn"><span class="glyphicon glyphicon-save"></span> Save</button>
    <div class="row voffset1">
      <div class="col-md-12">
        <form class="form-inline">
          <div class="form-group">
            <label for="speed">Offset</label>
          <input name="offset-min" type="number" class="form-control offset-min" placeholder="minutes">
          </div>
          <button class="btn btn-default btn-offset">Set</button>
        </form>
      </div>
    </div>
  </div>
</div>
