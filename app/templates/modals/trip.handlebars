<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
        <span aria-hidden="true">&times;</span><span class="sr-only">Close</span>
      </button>
      {{#if trip_id}}
      <h3 class="modal-title">Edit Trip id: {{trip_id}}</h3>
      {{else}}
      <h3 class="modal-title">Add New Trip</h3>
      {{/if}}
    </div>

    <div class="modal-body">
      <form role="form" >
        {{#unless trip_id}}
        <div class="form-group">
          <label for="trip_id">trip_id</label>
          <input class="form-control" type="text" name="trip_id" placeholder="trip_id" value="{{trip_id}}">
        </div>
        {{/unless}}
        <div class="form-group">
          <label for="route_id">route_id</label>
          <input class="form-control" type="text" name="route_id" placeholder="route_id" value="{{route_id}}">
        </div>
        <div class="form-group">
          <label for="service_id">service_id</label>
            <input class="form-control" type="text" name="service_id" placeholder="service_id" value="{{service_id}}">
        </div>
        <div class="form-group">
          <label for="shape_id">shape_id</label>
            <input class="form-control" type="text" name="shape_id" placeholder="shape_id" value="{{shape_id}}">
        </div>
        <div class="form-group">
          <label for="trip_headsign">trip_headsign</label>
            <input class="form-control" type="text" name="trip_headsign" placeholder="trip_headsign" value="{{trip_headsign}}">
        </div>
        <div class="form-group">
          <label for="trip_short_name">trip_short_name</label>
          <input class="form-control" type="text" name="trip_short_name" placeholder="trip_short_name" value="{{trip_short_name}}">
        </div>
        <div class="form-group">
          <label for="direction_id">direction_id</label>
          <input class="form-control" type="text" name="direction_id" placeholder="direction_id" value="{{direction_id}}">
        </div>
        <div class="form-group">
            <label>
              <input type="checkbox" {{#if active}}checked{{/if}}> Active
            </label>
        </div>
      </form>
    </div>

    <div class="modal-footer">
      <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      <button type="button" class="btn btn-primary js-save">Save changes</button>
    </div>
  </div>
</div>
