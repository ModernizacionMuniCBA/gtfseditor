<div class="col-md-12">
  <ol class="breadcrumb">
    <li><a href="#">Home</a></li>
    <li class="active">Routes</li>
  </ol>

  <h3>Routes</h3>
  <div class="row voffset1">
    <div class="col-md-12">
      <button class="btn btn-primary btn-create pull-right"><span class="glyphicon glyphicon-plus"></span> New</button>
    </div>
  </div>
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Active</th>
        <th>Type</th>
        <th>Agency</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {{#each models}}
      <tr data-index="{{@index}}">
        <td>{{route_short_name}}</td>
        <td><span class="glyphicon glyphicon-{{#if active}}ok{{/if}}"></span></td>
        <td>{{route_type}}</td>
        <td>{{agency_id}}</td>
        <td class="text-right">
          <button class="btn btn-default btn-rm"><span class="glyphicon glyphicon-remove"></span> Remove</button>
          <button class="btn btn-default btn-edit"><span class="glyphicon glyphicon-pencil"></span> Edit</button>
          <a href="#/routes/{{route_id}}/trips" class="btn btn-default btn-trips"> View trips</a>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>
